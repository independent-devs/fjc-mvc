#quantity-container
  #quantity
    = button_tag class: "decrement", data: {action: "click->products--public#decrement"} do
      = icon("fa-solid", "minus")
    = number_field_tag 'quantity', '1', class: "number-input", min: 1, data: {"products--public-target": "quantity", action: "input->products--public#quantityChange focusout->products--public#quantityChangeAfter"}
    = button_tag class: "increment", data: {action: "products--public#increment"} do
      = icon("fa-solid", "plus")
  #stocks{data: {"products--public-target": "stocks"}}
    = render StockCountComponent.new count: stock_num
