%footer.bg-white
  .margin-max-screen.w-full.py-8
    .md:flex.md:justify-between
      .mb-6.md:mb-0
        %a.flex.items-center{href: "https://flowbite.com/"}
          %span.self-center.text-xl.font-bold.whitespace-nowrap
            = t("storefront.name")
      .grid.grid-cols-2.gap-8.sm:gap-6.sm:grid-cols-3
        %div
          %h2.mb-4.text-sm.font-semibold.text-gray-900.uppercase Navigate
          %ul.text-gray-500.grid.gap-2
            %li
              = link_to "Products", products_path, class: "hover:underline hover:text-primary"
            %li
              = link_to "My Account", account_path, class: "hover:underline hover:text-primary"
            %li
              = link_to "My Orders", orders_path, class: "hover:underline hover:text-primary"
        %div
          %h2.mb-4.text-sm.font-semibold.text-gray-900.uppercase Follow us
          %ul.text-gray-500.grid.gap-2
            %li
              .hover:underline.hover:text-primary Facebook
            %li
              .hover:underline.hover:text-primary Instagram
        %div
          %h2.mb-4.text-sm.font-semibold.text-gray-900.uppercase Legal
          %ul.text-gray-500.grid.gap-2
            %li
              .hover:underline.hover:text-primary Privacy Policy
            %li
              .hover:underline.hover:text-primary Terms &amp; Conditions
    %hr.my-6.border-gray-200.sm:mx-auto.lg:my-8/
    .sm:flex.sm:items-center.sm:justify-between
      %span.text-sm.text-gray-500.sm:text-center
        = "© #{Date.current.year}"
        = succeed "." do
          = "#{t("storefront.name")}™"
      .flex.mt-4.sm:justify-center.sm:mt-0
        %a.text-gray-500.hover:text-gray-900{href: "#"}
          %svg.w-4.h-4{"aria-hidden" => "true", fill: "currentColor", viewbox: "0 0 8 19", xmlns: "http://www.w3.org/2000/svg"}
            %path{"clip-rule" => "evenodd", d: "M6.135 3H8V0H6.135a4.147 4.147 0 0 0-4.142 4.142V6H0v3h2v9.938h3V9h2.021l.592-3H5V3.591A.6.6 0 0 1 5.592 3h.543Z", "fill-rule" => "evenodd"}
          %span.sr-only Facebook page
