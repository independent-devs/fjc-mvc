.h-screen.w-64.sticky.border.bg-white
  .text-2xl.font-bold.px-4.py-3.mt-3
    FJC Admin
  .flex.flex-col.mt-3.px-4
    = render SidebarLinkComponent.new label: "Dashboard", path: admin_dashboard_index_path, icon: icon("fa-solid", "chart-simple")
    = render SidebarLinkComponent.new label: "Orders", path: admin_orders_path, icon: icon("fa-solid", "cart-shopping")
    = render SidebarLinkComponent.new label: t("products.title"), path: admin_products_path, icon: icon("fa-solid", "bag-shopping"), sub_paths: [{label: t("options.title"), path: admin_options_path}, {label: t("categories.title"), path: admin_categories_path}]     
  .flex.gap-3.absolute.bottom-0.px-4.py-3.bg-white.border-t.w-full.justify-between.items-center
    .flex.gap-3
      = icon("fa-solid", "user", class: "text-lg")
      = icon("fa-solid", "bell", class: "text-lg")
    = button_to destroy_user_session_path, method: :delete, class: "rounded-lg text-sm text-primary px-3 bg-primary/10 py-0.5" do
      = icon("fa-solid", "right-from-bracket")
      Logout
