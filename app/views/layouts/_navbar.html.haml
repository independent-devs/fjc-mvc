.h-20.w-full.border-b.flex.items-center
  .margin-max-screen.w-full.flex.justify-between.items-center
    .flex.gap-3.items-center
      = link_to "FJC Shop", root_path, class: "text-2xl font-extrabold"
      .ml-24
        %ul.flex.gap-8.font-medium
          %li.decoration-2.underline-offset-4.hover:underline
            = link_to t("home.link"), root_path
          %li.decoration-2.underline-offset-4.hover:underline
            = link_to t("products.link"), products_path
          %li.decoration-2.underline-offset-4.hover:underline
            = t("about.link")
    .flex.gap-5
      = button_to profile_index_path, method: :get do
        = icon("fa-solid", "cart-shopping", class: "text-xl")
      = button_to profile_index_path, method: :get do
        = icon("fa-regular", "heart", class: "text-xl")
      = button_to profile_index_path, method: :get do
        = icon("fa-regular", "user", class: "text-xl")
