= form_for @option_type do |f|
  - if @option_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@option_type.errors.count, "error")} prohibited this option_type from being saved:"
      %ul
        - @option_type.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
