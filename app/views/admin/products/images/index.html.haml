.margin-max-screen.py-7.flex.flex-col.gap-5{data: {controller: "admin--products--images--upload", upload_url: upload_admin_product_images_url(@product)}}
  = render "admin/products/tabs"
  .text-gray-500
    = @product.name
  .w-full.flex.flex-col.gap-5
    = render "drag_and_drop"
    = render "uploading"
  .grid.gap-5
    = render "limit"
    .grid.bg-white.rounded-sm.shadow-sm
      %ul.form-table-head.grid.grid-cols-2
        %li.flex.items-center
          = icon "fa-solid", "up-down", class: "mr-6 text-lg text-zinc-400"
          = t("images.table.thead.image")
        %li.pl-6
          = t("images.table.thead.actions")
      = render "data"
