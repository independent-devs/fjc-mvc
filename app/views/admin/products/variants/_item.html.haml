%li{id: dom_id(variant), data: {"sortable-update-url": position_admin_product_variant_path(@product, variant)}}
  = form_for(variant, as: "product_variant",                    
  url:  admin_product_variant_path(@product, variant),          
  html: {method: :put}, data: {controller: 'autosave'}) do |f|
    .grid.grid-cols-4.gap-8
      .flex.py-4
        .w-10= icon("fa-solid", "grip", class: "handle cursor-move text-zinc-500 text-lg")
        = f.object.grouped_name
      .flex.gap-2.py-4
        = currency_symbol(@product.currency)
        = render "item_price", form: f
      .flex.gap-2.py-4
        = currency_symbol(@product.currency)
        = render "item_cost", form: f
      .py-4
        %button{type: "button", 
        data: {controller: "variant", 
        action: "click->variant#delete", 
        url: admin_product_variant_path(@product, variant)}}
          = icon "fa-solid", "trash", class: "text-zinc-400 hover:text-red-500"

