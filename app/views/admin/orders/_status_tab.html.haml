.font-medium.text-center.border-b-2.border-gray-200
  %ul.flex.text-sm.gap-1
    %li
      = render TabLinkComponent.new path: admin_orders_path(page: params[:page]) do
        = t("orders.tabs.all")
    %li
      = render TabLinkComponent.new path: admin_orders_path(status: :pending, page: params[:page]) do
        = t("orders.tabs.pending")
    %li
      = render TabLinkComponent.new path: admin_orders_path(status: :to_ship, page: params[:page]) do
        = t("orders.tabs.to_ship")
    %li
      = render TabLinkComponent.new path: admin_orders_path(status: :to_recieve, page: params[:page]) do
        = t("orders.tabs.to_recieve")
    %li
      = render TabLinkComponent.new path: admin_orders_path(status: :fulfilled, page: params[:page]) do
        = t("orders.tabs.completed")
    %li
      = render TabLinkComponent.new path: admin_orders_path(status: :returned, page: params[:page]) do 
        = t("orders.tabs.returned")
    %li
      = render TabLinkComponent.new path: admin_orders_path(status: :refunded, page: params[:page]) do 
        = t("orders.tabs.refunded")
