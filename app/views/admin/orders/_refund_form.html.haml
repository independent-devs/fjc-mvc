- if can?(:refund, @order)
  .p-3.rounded.bg-white.grid.gap-2.border.border-gray-400
    %h2.font-medium Refund Details
    = form_for(@order, url: refund_admin_order_path(@order), html: {method: :post}) do |f|
      .flex.flex-col.gap-3
        .field
          = f.label :refund_reason, "Refund Reason"
          = f.text_field :refund_reason
        .field
          = f.label :refund_amount, "Refund Amount"
          = f.text_field :refund_amount
        %button.btn-primary.flex.gap-2.items-center
          = icon("fa-solid", "dollar-sign")
          Refund Order
