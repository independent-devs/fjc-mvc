.margin-max-screen.py-7
  .flex.flex-col.gap-5
    %h2.font-semibold.text-xl
      = t("orders.title")
    = render "status_tab"
    .flex.flex-col.gap-4
      %table
        %thead
          %tr
            %th= t("orders.table.thead.order_id")
            %th= t("orders.table.thead.ordered_at")
            %th= t("orders.table.thead.ordered_by")
        - if @orders.present?
          - @orders.each do |product|
            = render "item", product:
        - else
          %tr
            %td= t("orders.no_list_found")
            %td
            %td
      - if @pagy.pages > 1          
        .flex.gap-3.items-center.w-full.justify-between
          != pagy_info(@pagy)
          != pagy_nav(@pagy)
