.margin-max-screen.h-full.py-7
  .flex.gap-2.items-center.mb-5
    %h1.font-semibold.text-xl Categories
    = link_to new_admin_category_path, class: "flex text-sm rounded-sm items-center text-zinc-500 p-[2.5px] bg-gray-50 ring-1 ring-gray-500 hover:text-primary hover:ring-primary transition-colors" do
      = icon("fa-solid", "plus", class: "text-xs")
  - if @root_categories.present?
    = render "tree", categories: @root_categories
  - else
    %span.text-red-500.text-xl.font-bold
      No category
