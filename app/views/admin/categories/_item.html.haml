.flex.bg-white.items-center.gap-2.w-full.border.px-4.py-2.rounded{id: dom_id(category, "item")}
  = button_to admin_category_path(category), method: :delete, class: "text-zinc-400 hover:text-red-500 transition-colors",
  form: {data: {turbo_confirm: "Are you sure you want to delete category? All child of this category will be deleted also."}} do  
    = icon "fa-solid", "trash-can"
  = link_to edit_admin_category_path(category), class: "text-zinc-400 hover:text-primary transition-colors" do                       
    = icon("fa-solid", "edit")
  - if category.ancestry_depth < Category::MAX_DEPTH
    = link_to new_admin_category_path(ancestor: category.id), class: "flex text-sm rounded-sm items-center justify-center p-1 bg-gray-50 ring-1 ring-zinc-300" do                       
      = icon("fa-solid", "plus", class: "text-xs")
  = render "item_form", id: dom_id(category, "item_form"), category:, method: :put
