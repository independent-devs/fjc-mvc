- title "Login"
- description "Login Page"
- keywords "User, Login, Register"

.margin-max-screen.grid.place-items-center.h-full.py-20
  .flex.flex-col.gap-6.w-80
    = flash[:alert]
    = form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "h-fit"}) do |f|
      .grid{class: "gap-2.5"}
        %h2.font-semibold.text-2xl.mb-2 Login
        .field{"data-controller": "phone"}
          = f.label "Phone No."
          = f.phone_field  :phone_no, required: true, autocomplete: "phone_no", "data-phone-target": "field"
          = f.hidden_field :phone_no, "data-phone-target": "hidden", id: "input-tel"
        .field
          = f.label :password
          = f.password_field :password, required: true, autocomplete: "current-password"
        - if devise_mapping.rememberable?
          .flex.items-center.gap-2
            = f.check_box :remember_me, class: "text-primary rounded-sm focus:ring-0 mt-0.5"
            = f.label :remember_me
        .flex.flex-col.gap-2
          = f.submit "Log in", class: "btn-primary w-full cursor-pointer disabled:bg-gray-300 disabled:cursor-wait"
          = render "users/shared/sign_up"
    %fieldset.border-t.border-gray-400
      %legend.mx-auto.px-3.text-sm.uppercase.text-gray-600 or
    = render "users/shared/omniauth"
