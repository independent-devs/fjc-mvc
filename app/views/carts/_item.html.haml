.grid.gap-3.grid-cols-7.py-4.place-items-center
  .flex.w-full.gap-3.col-span-3.items-center
    .flex.gap-4.items-center{class: "w-[65%]"}
      = check_box_tag "cart_ids", cart.uuid, false, id: "#{cart.uuid}-checkbox", disabled: user_signed_in? && cart.user_id.nil?, class: "w-[18px] h-[18px] rounded-sm text-primary border border-gray-400 focus:ring-0 disabled:bg-stone-200 disabled:text-gray-200 disabled:cursor-not-allowed", data: {"cart--item-target": "checkbox"}
      .flex.gap-2
        = image_tag cart.variant_thumbnail || cart.product_thumbnail || "thumbnail.png", size: 320, id: "cart-#{cart.uuid}-thumbnail",
        class: "min-w-[75px] min-h-[75px] max-w-[75px] max-h-[75px] object-cover object-center border rounded-sm"
        .flex.flex-col.gap-1
          .leading-tight.line-clamp-2
            = cart.product_name
          - if cart.guest_session_id.present? && cart.user_id.nil?
            = render TagComponent.new name: "Guest", variant: :warning
    - unless cart.is_master
      %button.flex.flex-col.text-zinc-500.items-center{id: "cart-#{cart.uuid}-variant-pair"}
        .flex.gap-2.items-center
          Variations:
          = icon("fa-solid", "caret-down")
        #variant-pair
          = cart.variant_pair
  %div{id: "cart-#{cart.uuid}-unit-price"}
    = render PriceRangeComponent.new lowest: cart.unit_price, currency: cart.currency
  %div{id: "cart-#{cart.uuid}-qty"}
    #quantity-container
      #quantity.small
        = button_tag class: "decrement" do
          = icon("fa-solid", "minus")
        = number_field_tag 'quantity', cart.qty, id: "cart-#{cart.uuid}-qty-input", class: "number-input", min: 1
        = button_tag class: "increment" do
          = icon("fa-solid", "plus")
  .text-primary{id: "cart-#{cart.uuid}-total-price"}
    = render PriceRangeComponent.new lowest: total_price_calc(price: cart.unit_price, qty: cart.qty), 
    currency: cart.currency
  %button.hover:text-red-600.text-gray-400.text-lg
    = icon("fa-solid", "trash")
