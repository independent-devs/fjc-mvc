.w-full.margin-max-screen.py-8
  .grid.divide-y{data: {controller: "cart--item"}}
    .grid.gap-3.grid-cols-7.py-4.place-items-center
      .col-span-3.w-full.flex.gap-4.items-center
        = check_box_tag "select-all", "yes", false, data: {"cart--item-target": "checkboxAll"}, 
        class: "w-[18px] h-[18px] rounded-sm mt-0.5 text-primary border border-gray-400 focus:ring-0"
        %span.font-semibold.text-primary
          My Cart
      %div
        Unit Price
      %div
        Quantity
      %div
        Total Price
      %div
        Actions
    - if @carts.present?
      - @carts.each do |cart|
        = render "item", cart:
