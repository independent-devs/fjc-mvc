= render "seo"
.w-full.margin-max-screen.py-7
  .relative.grid.divide-y.bg-white.rounded-sm.shadow-sm{data: {controller: "carts--select-all items", empty: "items-empty", "item": "cart-item"}}
    .grid
      .grid.gap-3.grid-cols-7.py-4.place-items-center.border-b
        .col-span-3.w-full.flex.gap-4.items-center.pl-5
          = check_box_tag "select-all", "yes", false, data: {"carts--select-all-target": "checkboxAll"}, class: "checkbox-primary mt-0.5"
          %span.font-semibold.text-primary
            My Cart
        %div
          Unit Price
        %div
          Quantity
        %div
          Total Price
        %div
          Actions
      - if @carts.present? || @bn.present?
        .divide-y
          - if @bn.present?
            = render Carts::Item::BaseComponent.new cart: @bn
          - @carts.each do |cart|
            = render Carts::Item::BaseComponent.new cart:
      = render EmptyItemComponent.new text: "No carts yet", hide: (@carts.present? || @bn.present?)
    .flex.sticky.top-0.w-full.bg-white.py-4.px-5
      hi
