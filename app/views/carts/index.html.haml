.w-full.margin-max-screen.py-8
  .grid.divide-y{data: {controller: "checkbox-select-all"}}
    .grid.gap-3.grid-cols-7.py-4.place-items-center
      .col-span-3.w-full.flex.gap-2.items-center
        = check_box_tag "select-all", "yes", false, class: "mt-0.5 text-primary border border-gray-400 focus:ring-0", 
        data: {"checkbox-select-all-target": "checkboxAll"}
        %span.font-semibold.text-primary
          My Cart
      %div
        Unit Price
      %div
        Quantity
      %div
        Total Price
      %div
        Actions
    - if @carts.present?
      - @carts.each do |cart|
        = render "item", cart:
