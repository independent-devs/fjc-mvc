.cart-item.grid.gap-3.grid-cols-7.py-5.place-items-center{id: "cart-#{cart.id}", data: {controller: "carts--item"}}
  = render Carts::Item::UpdateUrlComponent.new cart:
  = render Carts::Item::DetailsComponent.new cart:
  = render Carts::Item::UnitpriceComponent.new cart:, price: cart.price, currency: cart.currency
  = render Carts::Item::QtyComponent.new cart:, count_on_hand: cart.count_on_hand, sale: sale?(cart.variant)   
  = render Carts::Item::TotalpriceComponent.new cart:, price: cart.price, currency: cart.currency
  = render Carts::Item::ActionsComponent.new cart:
