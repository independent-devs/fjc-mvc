.flex.flex-col
  = link_to label, path, class: "px-4 py-1.5 #{path.in?(request.path) ? 'bg-primary/10 text-primary' : 'hover:bg-gray-100'}"
  - if sub_paths.present? && path.in?(request.path)
    .flex.flex-col
      = link_to label, path, class: "pl-8 pr-4 py-1.5 hover:bg-gray-100"
      = sub_paths.each do |sp|
        = link_to sp["label"], sp["path"], class: "pl-8 pr-4 py-2 hover:bg-gray-100"
