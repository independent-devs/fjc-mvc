= link_to product_path(product), class: "max-w-60 group" do
  .relative.overflow-hidden.rounded.border
    = image_tag product.thumbnail.attached? ? product.thumbnail.variant(:card) : "thumbnail.png", class: "rounded-sm w-full object-cover object-center sm:group-hover:scale-105 transition-transform duration-300", size: 320
  .mt-2.font-medium.text-xs.sm:text-sm.md:text-base
    .block= product.name
    .text-primary
      = render PriceRangeComponent.new lowest: product.lowest_price, highest: product.highest_price, currency: product.currency
