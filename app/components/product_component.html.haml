= link_to product_path(product), class: "max-w-60 group" do
  .relative.overflow-hidden.rounded.border
    = image_tag product.thumbnail.attached? ? product.thumbnail.variant(:card) : "thumbnail.png", class: "rounded-sm object-cover object-center sm:group-hover:scale-105 transition-transform duration-300 h-20 min:h-20 sm:h-24 sm:min-h-24 md:h-52 md:min-h-52 w-full", size: 320
  .mt-2.font-medium.text-xs.sm:text-sm.md:text-base
    .block= product.name
    .text-primary
      = render PriceRangeComponent.new lowest: product.lowest_price, currency: product.currency
